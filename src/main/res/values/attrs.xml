<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TimeScrollable">
    </declare-styleable>

    <declare-styleable name="TimeSliderLayout.TimeScrollable">
        <attr name="time_zone" format="string"/>
        <attr name="locale" format="string"/>
    </declare-styleable>

    <declare-styleable name="TimeSlider.TimeScrollable">
        <attr name="direction" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="time_unit" format="string"/>
        <attr name="time_unit_names" format="string"/>

        <attr name="item_width" format="dimension"/>
        <attr name="item_height" format="dimension"/>
        <attr name="scroll_speed" format="float"/>
        <attr name="format_string" format="string"/>

        <attr name="font_size" format="dimension"/>
        <attr name="font_size_selected" format="dimension"/>
        <attr name="font_color" format="color"/>
        <attr name="font_color_selected" format="color"/>
        <attr name="font_size_linear_gradient" format="boolean"/>
        <attr name="font_color_linear_gradient" format="boolean"/>

        <attr name="number_items_before" format="integer"/>
        <attr name="number_items_after" format="integer"/>
    </declare-styleable>

</resources>